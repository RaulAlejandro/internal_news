<div id="post_<%= post.id %>" class="row">
  <div class="col-md-12" style="border: 1px #dedede solid; padding:3em; background-color:#000">
    <div class="row">
        <%= image_tag post.image, style:"width: 100%; height: 600px;"%>
    </div>
  </div>
  <div class="col-md-12 mt-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title" style="font-size:  1.875rem"><%= post.title %></h1>
        <h5 class="card-subtitle"><%= post.summary %></h5>
        <br>
        <p class="card-description">
          Autor: <%= post.user.name %>
        </p>
        <p class="card-description">
          Fecha Publicaci√≥n: <%= post.created_at.to_date %>
        </p>
      </div>
      <div class="card-body">
        <blockquote class="blockquote ">
          <% if action_name == 'show' %>
            <%= simple_format post.content %>  
          <% end %>
        </blockquote>
      </div>
    </div>
  </div>
</div>