<div class="grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Publicaci√≥n de Noticias</h4>
      <!--<h2 class="card-title">Crear Nueva Noticia</h2>-->
      <%= form_for(@post, url: posts_path, html: { id: 'formPost', class: 'forms-sample'} ) do |f| %> 
        <div class="form-group">
          <%= f.label :title, "Titular", class:"control-label"%>
          <%= f.text_field :title, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :summary, "Bajada", class:"control-label"%>
          <%= f.text_field :summary, class: "form-control", required: true, value:"" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "Imagen"%><br>
          <div class="input-group col-xs-12">
            <%= f.file_field :image , class:"form-control file-upload-info", required: true%>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, "Contenido", class:"control-label"%>
          <%= f.text_area :content, class: "tinymce", cols:"20", rows:"20" %>
          <%= tinymce %>
        </div>
        <%= f.hidden_field :user_id, class: "form-control", value:current_user.id %>
        <div class="navbar-right">
          <%= f.submit "Publicar", class: "btn btn-primary" %>
          <%= link_to "Cancelar", posts_path, class:"btn btn-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>