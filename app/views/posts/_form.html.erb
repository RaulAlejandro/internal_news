<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Basic form elements</h4>
      <p class="card-description">
        Basic form elements
      </p>
      <%= form_for(@post, url: posts_path, html: { id: 'formPost', class: 'forms-sample'} ) do |f| %> 
        <div class="form-group">
          <%= f.label :title, class:"control-label"%>
          <%= f.text_field :title, class: "form-control", required: true %>
        </div>
        <div class="form-group">
          <label>File upload</label>
          <input type="file" name="img[]" class="file-upload-default">
          <div class="input-group col-xs-12">
            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
            <span class="input-group-append">
              <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
            </span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, class:"control-label"%>
          <%= f.text_area :content, class: "tinymce", cols:"20", rows:"20" %>
          <%= tinymce %>
        </div>
        <%= f.text_field :user_id, class: "form-control", value:current_user.id %>

        <div class="navbar-right">
          <%= f.submit "Publicar", class: "btn btn-primary" %>
          <button class="btn btn-light">Cancel</button>
        </div>
      <% end %>
    </div>
  </div>
</div>




<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>